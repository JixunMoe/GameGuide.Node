screen-xs-min = 480px
screen-sm-min = 768px
screen-md-min = 992px
screen-lg-min = 1200px

screen-xs-max = screen-sm-min - 1px
screen-sm-max = screen-md-min - 1px
screen-md-max = screen-lg-min - 1px

text-color = #333

body
  background #f2f2f2
  padding-top: 70px
  font-family: "Helvetica Neue",Helvetica,"Microsoft JhengHei UI","Microsoft YaHei UI",Arial,sans-serif;
  font-size: 150%;

.game .cover
  float: right
  padding 0 .5em

table
  background: #fff
  
.game img.game-cover
  border 2px solid #FFF
  max-width: 200px;
  max-height: 200px;

  @media(min-width: screen-xs-min) {
    max-width: 200px;
    max-height: 200px;
  }
  @media (min-width: screen-sm-min) and (max-width: screen-sm-max) {
    max-width: 300px;
    max-height: 300px;
  }
  @media (min-width: screen-md-min) and (max-width: screen-md-max) {
    max-width: 400px;
    max-height: 400px;
  }
  @media (min-width: screen-lg-min) {
    max-width: 400px;
    max-height: 400px;
  }

a.reset-pw
  margin-left 2em

.guide-count
  margin-left .5em
  cursor help

span.caret
  margin-left .5em

h1 > small
  margin-left 1em

hr
  border-top-color #ddd
  width: 75%;
  margin-top: 30px;
  margin-bottom: 30px

.guide-editor
  padding-bottom 20em

.chapter-editor
  .order
    width 5em
  .url
    width calc(100% + 1px)
    margin-left -1px
  .name
    width calc(100% - 5em + 1px)
    margin-left -1px
  label.remove
    padding-top 3px
  .chapter-content
    height: 20em;
  .editor-wrap
    height 100%
  textarea
    max-width 100%
    height 100%
    display flex
    resize none
  .preview-wrap
    max-height 100%
    width 100%
    @media (min-width: screen-md-min)
      width calc(50% - 1em)
  textarea, .preview-wrap
    overflow-y auto

.btn-icon-left
  padding-right 0.5em

span.separator
  padding-left .5em
  padding-right .5em

.chapters
  .chapter-header
    padding-top     1em
    padding-bottom .5em

    h4
      margin 0

#chapter .content,
.chapter-content .preview
  blockquote
    font-size initial

  green, red, blue, yellow,
  danger, info, warn
    padding 0 .25em
    margin 0 .25em
    display inline
    border 1px solid transparent

  green
    border-color #32cd32
  red
    border-color #f00
  blue
    border-color #00f
  yellow
    border-color #cc0

  danger
    background: #ffb6c1
  info
    background #ccffff
  warn
    background #fff080

red-text
  color: #d70000

green-text
  color: green

blue-text
  color: blue

yellow-text
  color: yellow

table.table.table-inline
  width initial

.comments-container
  background: white;
  padding: .5em 1em;
  border: 1px solid #ccc;
  box-shadow: 2px 2px 5px 0 #ccc;
  margin-top 2em;
  margin-bottom 2em;

  h2.header-comments
    margin-top .5em
    margin-bottom .5em

.chapter-header, .panel
  -webkit-user-select: none
  -ms-user-select: none
  -moz-user-select: none
  user-select: none
  cursor: default

.panel-title > a
  text-decoration none

blackout
